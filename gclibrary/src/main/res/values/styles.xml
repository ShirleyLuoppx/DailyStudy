<resources xmlns:android="http://schemas.android.com/apk/res/android">

    <!-- Base application theme. -->
    <style name="BaseAppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/view_bg</item>
        <item name="colorPrimaryDark">@color/view_bg</item>
        <item name="colorAccent">@color/title_bg</item>
        <item name="android:textColorPrimary">@color/title_bg</item>
        <item name="android:windowAnimationStyle">@style/AnimFadeFromRight</item>
    </style>

    <!--activity半透明-->
    <style name="AppThemeAlp" parent="BaseAppTheme">
        <!-- Customize your theme here. -->
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowBackground">@color/ll_black_90</item>
        <item name="android:windowIsTranslucent">true</item>
    </style>

    <!-- 透明wait对话框 -->
    <style name="DialogNoTitleStyleTranslucentBg" parent="android:style/Theme.Dialog">
        <item name="android:windowIsTranslucent">true</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowFrame">@null</item>
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:windowIsFloating">true</item>
    </style>

    <!-- 圆角alert对话框 -->
    <style name="DialogNoTitleRoundCornerStyle" parent="@android:style/Theme.Dialog">
        <item name="android:windowFrame">@null</item>
        <item name="android:windowIsFloating">true</item>
        <item name="android:windowIsTranslucent">false</item>
        <item name="android:windowNoTitle">true</item>
        <!--<item_friend_private_footer name="android:windowBackground">@drawable/frame_bg_toast</item_friend_private_footer>-->
        <item name="android:windowBackground">@color/transparent</item>
        <item name="android:backgroundDimEnabled">true</item>
        <item name="android:backgroundDimAmount">0.4</item>
    </style>

    <!-- Dialog -->
    <style name="dialogThemeFullScr" parent="@android:style/Theme.Dialog">
        <!-- 边框 -->
        <item name="android:windowFrame">@null</item>
        <!-- 是否浮现在activity 上 -->
        <item name="android:windowIsFloating">true</item>
        <!-- 半透明 -->
        <item name="android:windowIsTranslucent">false</item>
        <item name="android:background">@null</item>
        <item name="android:windowNoTitle">true</item>
        <!-- 除去title -->
        <item name="android:windowContentOverlay">@null</item>
        <item name="android:backgroundDimEnabled">true</item>
        <item name="android:windowBackground">@color/transparent</item>
        <!--占满屏幕 -->
        <item name="android:windowFullscreen">true</item>
        <item name="android:configChanges">orientation|keyboardHidden|screenSize</item>
    </style>

    <!--dialog动画对话框-->
    <style name="dialogAnimLeft" mce_bogus="1" parent="android:Animation">
        <item name="android:windowEnterAnimation">@anim/slide_in_from_left</item>
        <item name="android:windowExitAnimation">@anim/slide_out_to_right</item>
    </style>

    <!--dialog动画对话框-->
    <style name="dialogAnimBottom" mce_bogus="1" parent="android:Animation">
        <item name="android:windowEnterAnimation">@anim/dialog_enter_anim</item>
        <item name="android:windowExitAnimation">@anim/dialog_exit_anim</item>
    </style>

    <!--activity动画-->
    <style name="AnimFadeFromLeft" parent="@android:style/Animation.Activity">
        <item name="android:activityOpenEnterAnimation">@anim/slide_in_from_left</item>
        <item name="android:activityOpenExitAnimation">@anim/slide_out_to_right</item>
        <item name="android:activityCloseExitAnimation">@anim/slide_out_to_left</item>
        <item name="android:activityCloseEnterAnimation">@anim/slide_in_from_right</item>
    </style>

    <style name="AnimFadeFromRight" parent="@android:style/Animation.Activity">
        <item name="android:activityOpenEnterAnimation">@anim/slide_in_from_right</item>
        <item name="android:activityOpenExitAnimation">@anim/slide_out_to_left</item>
        <item name="android:activityCloseExitAnimation">@anim/slide_out_to_right</item>
        <item name="android:activityCloseEnterAnimation">@anim/slide_in_from_left</item>
    </style>

    <style name="AnimFadeFromBottom" parent="@android:style/Animation.Activity">
        <item name="android:activityOpenEnterAnimation">@anim/slide_in_from_bottom</item>
        <item name="android:activityOpenExitAnimation">@anim/slide_out_to_top</item>
        <item name="android:activityCloseExitAnimation">@anim/slide_out_to_bottom</item>
        <item name="android:activityCloseEnterAnimation">@anim/slide_in_from_top</item>
    </style>

    <style name="horizontal_slide_from_left" parent="android:Theme.NoTitleBar">
        <item name="android:windowAnimationStyle">@style/AnimFadeFromLeft</item>
    </style>

    <style name="horizontal_slide_from_right" parent="android:Theme.NoTitleBar">
        <item name="android:windowAnimationStyle">@style/AnimFadeFromRight</item>
    </style>

    <style name="horizontal_slide_from_bottom" parent="android:Theme.NoTitleBar">
        <item name="android:windowAnimationStyle">@style/AnimFadeFromRight</item>
    </style>

</resources>