<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <Button
        android:id="@+id/btn_click_show_notification"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="parent"
        android:text="btn_click_show_notification"/>

    <Button
        android:id="@+id/btn_click_remote_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="btn_click_remote_view"
        app:layout_constraintTop_toBottomOf="@id/btn_click_show_notification"/>
</androidx.constraintlayout.widget.ConstraintLayout>