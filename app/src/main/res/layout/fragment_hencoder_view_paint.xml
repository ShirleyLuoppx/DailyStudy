<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorWhite">

    <TextView
        android:id="@+id/tv_text_label"
        android:layout_width="match_parent"
        android:layout_height="100px"
        android:gravity="center_vertical"
        android:text="自定义View 1-3 Text"
        android:textColor="@color/colorBlack"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/btn_draw_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="draw_text..."
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@id/tv_text_label" />

    <Button
        android:id="@+id/btn_show_text_style"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="文字显示效果方式"
        app:layout_constraintLeft_toRightOf="@id/btn_draw_text"
        app:layout_constraintTop_toBottomOf="@id/tv_text_label" />

    <Button
        android:id="@+id/btn_measure_text_size"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="测量文字尺寸"
        app:layout_constraintLeft_toRightOf="@id/btn_show_text_style"
        app:layout_constraintTop_toBottomOf="@id/tv_text_label" />

    <FrameLayout
        android:id="@+id/fl_paint"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />
</androidx.constraintlayout.widget.ConstraintLayout>