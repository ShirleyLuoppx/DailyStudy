<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <androidx.appcompat.widget.Toolbar
        android:id="@+id/toolbar_simple"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_scrollFlags="enterAlways|scroll"
        app:logo="@drawable/baseline_star_purple500_24"
        app:logoDescription="this is a logo desc"
        app:menu="@menu/navi_main_menu"
        app:navigationIcon="@drawable/ic_baseline_arrow_back_24"
        app:subtitle="subtitle"
        app:subtitleTextColor="@color/colorAsGreen"
        app:title="ToolBar Simple Demo"
        app:titleTextAppearance="@style/CustomToolbarTitleStyle"
        app:titleTextColor="@color/colorBlueAEAC"
        android:background="@color/colorDarkBG1F2"/>

</androidx.constraintlayout.widget.ConstraintLayout>