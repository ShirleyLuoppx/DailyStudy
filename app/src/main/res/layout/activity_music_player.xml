<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <Button
        android:id="@+id/bt_play_music"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="play"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/bt_pause_music"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="pause"
        app:layout_constraintLeft_toRightOf="@id/bt_play_music"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/bt_pre_music"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="pre"
        app:layout_constraintLeft_toRightOf="@id/bt_pause_music"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/bt_next_music"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="next"
        app:layout_constraintLeft_toRightOf="@id/bt_pre_music"
        app:layout_constraintTop_toTopOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>