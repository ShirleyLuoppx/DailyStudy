<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/rv_sqlite_data"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:itemCount="6"
        tools:listitem="@layout/item_sqlite_data" />

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent">

        <Button
            android:id="@+id/bt_create_table"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="click to create a table"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <Button
            android:id="@+id/bt_add_data"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="add data into table"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toBottomOf="@id/bt_create_table" />

        <Button
            android:id="@+id/bt_update_data"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="update data"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toBottomOf="@id/bt_add_data" />

        <Button
            android:id="@+id/bt_delete_data"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="delete data"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toBottomOf="@id/bt_update_data" />

        <Button
            android:id="@+id/bt_query_data"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="query data"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toBottomOf="@id/bt_delete_data" />

        <Button
            android:id="@+id/bt_add_data_by_sql"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="add data into table by sql"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toBottomOf="@id/bt_query_data" />

        <Button
            android:id="@+id/bt_update_data_by_sql"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="update data by sql"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toBottomOf="@id/bt_add_data_by_sql" />

        <Button
            android:id="@+id/bt_delete_data_by_sql"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="delete data by sql"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toBottomOf="@id/bt_update_data_by_sql" />

        <Button
            android:id="@+id/bt_query_data_by_sql"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="query data by sql"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toBottomOf="@id/bt_delete_data_by_sql" />
    </androidx.constraintlayout.widget.ConstraintLayout>
</androidx.constraintlayout.widget.ConstraintLayout>