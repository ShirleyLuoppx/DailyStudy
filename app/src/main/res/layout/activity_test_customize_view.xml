<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <com.ppx.dailystudy.hencoder.view.HenCoderViewDemo
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:layout_constraintTop_toTopOf="parent" />

    <com.ppx.dailystudy.view.CustomizeView
        android:id="@+id/customizeView"
        android:layout_width="wrap_content"
        android:layout_height="100dp"
        android:background="@color/colorRedFF55"
        app:default_size="100dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <com.ppx.dailystudy.view.CustomizViewGroup
        android:id="@+id/viewgroup"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@color/colorBlue5D6A7D"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@id/customizeView">

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="btn1" />

        <Button
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:text="btn2" />

        <Button
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:text="btn3" />

    </com.ppx.dailystudy.view.CustomizViewGroup>

    <com.ppx.dailystudy.view.ScaleRulerView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@id/viewgroup" />

</androidx.constraintlayout.widget.ConstraintLayout>