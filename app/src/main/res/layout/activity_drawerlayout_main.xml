<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <Button
        android:id="@+id/btn_simple"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="simple"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/btn_simple_and_toolbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="simple and toolbar"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@id/btn_simple" />

    <Button
        android:id="@+id/btn_simple_navigation_toolbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="simple navigation toolbar"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@id/btn_simple_and_toolbar" />

    <Button
        android:id="@+id/btn_simple_navigation_toolbar_immersive"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="simple navigation toolbar immersive"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@id/btn_simple_navigation_toolbar" />

    <Button
        android:id="@+id/btn_simple_navigation_imitate_qq"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="simple navigation imitate qq"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@id/btn_simple_navigation_toolbar_immersive" />

</androidx.constraintlayout.widget.ConstraintLayout>