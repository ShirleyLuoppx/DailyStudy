<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:id="@+id/tv_main_process"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/main_process_txt"
        android:textAlignment="center"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/ben_show_second_activity"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/show_second_activity"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/ben_show_third_activity"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/show_third_activity"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@id/ben_show_second_activity" />

</androidx.constraintlayout.widget.ConstraintLayout>