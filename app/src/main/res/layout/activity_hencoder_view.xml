<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:id="@+id/btn_hencoder_view_demo"
        android:layout_width="wrap_content"
        android:layout_height="50dp"
        android:text="自定义View1-1"
        android:textSize="25sp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/btn_hencoder_view_fill_type"
        android:layout_width="wrap_content"
        android:layout_height="50dp"
        android:text="fillType"
        android:textSize="25sp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@id/btn_hencoder_view_demo" />

    <TextView
        android:id="@+id/btn_hencoder_homework1"
        android:layout_width="wrap_content"
        android:layout_height="50dp"
        android:text="HenCoderViewHomeWork1Activity"
        android:textSize="25sp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@id/btn_hencoder_view_fill_type" />

    <TextView
        android:id="@+id/btn_hencoder_view_paint"
        android:layout_width="wrap_content"
        android:layout_height="50dp"
        android:text="自定义View1-2：Paint"
        android:textSize="25sp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@id/btn_hencoder_homework1" />

    <TextView
        android:id="@+id/btn_view_canvas_text"
        android:layout_width="wrap_content"
        android:layout_height="50dp"
        android:text="自定义View1-3：Text"
        android:textSize="25sp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@id/btn_hencoder_view_paint" />

    <TextView
        android:id="@+id/btn_view_canvas_clip"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="20dp"
        android:text="自定义View1-4：Canvas的范围裁切和几何变换"
        android:textSize="25sp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@id/btn_view_canvas_text" />

    <FrameLayout
        android:id="@+id/base_framelayout"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />
</androidx.constraintlayout.widget.ConstraintLayout>